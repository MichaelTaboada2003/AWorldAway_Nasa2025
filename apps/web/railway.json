{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["app/**", "components/**", "pages/**", "nuxt.config.*", "package.json", "pnpm-lock.yaml"]
  },
  "deploy": {
    "preDeployCommand": ["pnpm install --frozen-lockfile", "pnpm build"],
    "startCommand": "node .output/server/index.mjs",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}